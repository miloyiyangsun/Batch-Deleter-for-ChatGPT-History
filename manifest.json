{
    "manifest_version": 3,
    "name": "Batch Deleter for ChatGPT History",
    "version": "1.0",
    "description": "Sequentially deletes a specified number of conversations from your chat history.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
    "permissions": ["scripting", "storage"],
    "host_permissions": [
        "https://chatgpt.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://chatgpt.com/*"],
            "js": ["selection.js"],
            "css": []
        }
    ]
} 